<?xml version="1.0" encoding="UTF-8"?>
<TarantulaPlugin>
    <PluginLoad>
        <Name>Fill Event Processor</Name>
        <Type>EventProcessor</Type>
        <ScriptName>EventProcessor_Fill</ScriptName>
        <Instance>Event Filler 1</Instance>
        <Description>Generates a series of events to fill a period or time, using a semi-random algorithm</Description>
        <Enabled>true</Enabled>
    </PluginLoad>
    <PluginData>
        <DBFile>datafiles/EventProcessor_Fill/filedata.db</DBFile>
        <GenerateTopLevel>false</GenerateTopLevel><!-- Generate child events of the processor (false), or siblings (true) -->
        <FileWeight>2</FileWeight>
        <WeightPoints>
            <WeightPoint>
                <Time units="seconds">0</Time>
                <Weight>1000</Weight>
            </WeightPoint>
            <WeightPoint>
                <Time units="seconds">500</Time>
                <Weight>100</Weight>
            </WeightPoint>
            <WeightPoint>
                <Time units="seconds">3600</Time>
                <Weight>10</Weight>
            </WeightPoint>
            <WeightPoint>
                <Time units="seconds">40000</Time>
                <Weight>1</Weight>
            </WeightPoint>
        </WeightPoints>
        <StructureData>
            <StructureItem>
                <Type>ident</Type>
                <Device>Main Video Server</Device>
                <DeviceType>Video</DeviceType>
                <Action>Play</Action>
            </StructureItem>
            <StructureItem>
                <Type>trailer</Type>
                <Device>Main Video Server</Device>
                <DeviceType>Video</DeviceType>
                <Action>Play</Action>
            </StructureItem>
        </StructureData>
        <EnableFill>true</EnableFill>
        <ContinuityFill> <!--  Describes a CG event to pad out unfilled time -->
            <MinimumTime units="seconds">5</MinimumTime> <!--  Minimum length of CG event -->
            <Device>Main Video Server Graphics</Device>
            <GraphicName>continuity</GraphicName>
            <PreProcessor>EventProcessor_Fill::populateCGNowNext</PreProcessor>
            <HostLayer>1</HostLayer>
        </ContinuityFill>
    </PluginData>
</TarantulaPlugin>