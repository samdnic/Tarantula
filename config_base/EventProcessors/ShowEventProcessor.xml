<?xml version="1.0" encoding="UTF-8"?>
<TarantulaPlugin>
    <PluginLoad>
        <Name>Show Event Processor</Name>
        <Type>EventProcessor</Type>
        <Description>
            Generate a video event, continuity filler and Now/Next overlays for pre-recorded material
        </Description>
        <ScriptName>EventProcessor_Show</ScriptName>
        <Instance>Show</Instance>
        <Enabled>true</Enabled>
    </PluginLoad>
    <PluginData mode="simple">
        <VideoDevice>Main Video Server</VideoDevice>
        <FillProcessorName>Event Filler 1</FillProcessorName>
        <FillLength units="minutes">2</FillLength>
        <CGDevice>Main Video Server Graphics</CGDevice>
        <NowNextName>nownext</NowNextName>
        <NowNextPeriod units="minutes">10</NowNextPeriod>
        <NowNextMin units="minutes">2</NowNextMin>
        <NowNextDuration units="seconds">10</NowNextDuration>
        <NowNextHostLayer>5</NowNextHostLayer>
    </PluginData>
</TarantulaPlugin>
