<?xml version="1.0" encoding="UTF-8"?>
<TarantulaPlugin>
    <PluginLoad>
        <Name>Live Show Event Processor</Name>
        <Type>EventProcessor</Type>
        <Description>
            Generate stuff for live shows
        </Description>
        <ScriptName>EventProcessor_Live</ScriptName>
        <Instance>LiveShow</Instance>
        <Enabled>true</Enabled>
    </PluginLoad>
    <PluginData mode="simple">
        <LiveFilename>DECKLINK DEVICE 1</LiveFilename><!-- This is supplied as a CasparCG Play command to make live happen -->
        
        <FillProcessorName>Event Filler 1</FillProcessorName>
        <FillLength units="minutes">2</FillLength>
        
        <VideoDevice>Main Video Server</VideoDevice>
        
        <CGDevice>Main Video Server Graphics</CGDevice>
        <NowNextName>nownext</NowNextName>
        <NowNextPeriod units="minutes">10</NowNextPeriod>
        <NowNextMin units="minutes">2</NowNextMin>
        <NowNextDuration units="seconds">10</NowNextDuration>
        <NowNextHostLayer>5</NowNextHostLayer>
        
        <VTDevice>Main Video Server</VTDevice>
        <VTClockFilename>AMB</VTClockFilename>
        <VTClockDuration units="seconds">30</VTClockDuration>
    </PluginData>
</TarantulaPlugin>
